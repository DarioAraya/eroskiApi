<% layout('./layouts/boilerplate') %>
<div class="container mb-5 mt-5" id="containerCard">
  <div class="row">
    <% for(let arr of data){ %>
    <div class="col-md-4">
      <div class="card mt-3">
        <div class="product-1 aling-items-center p-2 text-center">
          <% if(arr.url_image){%>
          <img
            src="<%= arr.url_image%>"
            alt=""
            class="rounded"
            height="160"
            width="160"
          />
          <%}else{ %>
          <img
            src="https://www.yeaah.co/wp-content/uploads/2021/08/producto-sin-imagen.jpg"
            alt=""
            class="rounded"
            height="160"
            width="160"
          />
          <% } %>
          <h5><%= arr.name%></h5>

          <div class="cost mt-3 text-dark">
            <!--ESTO SIRVE PARA PONERLE EL PUNTO AL PRECIO-->
            <% let price = Math.round(arr.price-(arr.price * arr.discount
            /100))%>

            <!-- -->
            <% let price2 = new Intl.NumberFormat('es-CL', { style: 'currency',
            currency: 'CLP' }).format(price)%>
            <!-- -->
            <% let price3 = new Intl.NumberFormat('es-CL', { style: 'currency',
            currency: 'CLP' }).format(arr.price) %>
            <!-- -->
            <% if(arr.discount>0) {%>
            <span> <%= price2 %> </span>
            <span>
              <del><%= price3%></del>

              <span>-<%=arr.discount%>%</span>
            </span>
            <% }else{ %>
            <span> <%= price3%> </span>
            <% } %>
          </div>
        </div>

        <div class="p-3 product text-center text-white mt-3 cursor">
          <span class="text-uppercase">Add to cart</span>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
